@page
@model MyLibraryApp.Pages.Books.DeleteModel
@{
}

<form method="post">
    <input hidden asp-for="Book.Id" />  <!-- udostepnia pole Id klasie EditModel -->
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3"> Edit Book</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Book.Title"></label>
            <input asp-for="@Model.Book.Title" disabled class="form-control" /> <!-- pokazuje wartosc z pola title na stronie -->
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Book.Author"></label>
            <input asp-for="@Model.Book.Author" disabled class="form-control" /> <!-- disabled wyłącza input na polu -->
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px;"> Delete </button>
        <a asp-page="Index" class="btn btn-secondary" style="width:150px;"> Back </a>
    </div>
</form>