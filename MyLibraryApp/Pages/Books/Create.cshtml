@page
@model MyLibraryApp.Pages.Books.CreateModel
@{
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3"> Add Book</h2>
            <hr />
        </div>
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="@Model.Book.Title"></label>
            <input asp-for="@Model.Book.Title" class="form-control" />

        </div>
        <div class="mb-3">
            <label asp-for="@Model.Book.Author"></label>
            <input asp-for="@Model.Book.Author" class="form-control" />

        </div>
        <button type="submit" class="btn btn-primary" style="width:150px;"> Add </button>
        <a asp-page="Index" class="btn btn-secondary" style="width:150px;"> Back </a>
    </div>
</form>